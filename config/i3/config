###########          Workspace Bindings          ###############

set $mode_workspace Workspaces: [Up/Down]Vertical [Left/Right]Horizontal
bindsym $Mod+apostrophe mode "$mode_workspace"
mode "$mode_workspace" {
    bindsym $Mod+j            workspace number "2: comm"
    bindsym $Mod+k            workspace number "1: home"
    bindsym $Mod+m            workspace number "4: code"
    bindsym $Mod+comma        workspace number "3: docs"

    bindsym $Mod+Shift+j      move to workspace number "2: comm"
    bindsym $Mod+Shift+k      move to workspace number "1: home"
    bindsym $Mod+Shift+m      move to workspace number "4: code"
    bindsym $Mod+Shift+comma  move to workspace number "3: docs"


    bindsym Escape          mode "default"
    bindsym Return          mode "default"
    bindsym $Mod+apostrophe mode "default"
}

